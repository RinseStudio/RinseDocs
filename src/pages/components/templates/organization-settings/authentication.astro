                <TextField value="Jane" fluid />
              </div>
              <div>
                <label class="mb-2 block text-[13px] font-semibold text-gray-900 dark:text-gray-400">Phone</label>
                <TextField value="+1 415 918 2944" fluid />
              </div>
              <div>
                <label class="mb-2 block text-[13px] font-semibold text-gray-900 dark:text-gray-400">Email</label>
                <TextField value="jane@pigibank.com" fluid />
              </div>
              <div>
                <label class="mb-2 block text-[13px] font-semibold text-gray-900 dark:text-gray-400">Timezone</label>
                <Dropdown direction="bottomLeft" widthClass="w-full">
                  <SelectField value="Browser timezone" fluid />
                  <slot slot="dropdown-content">
                    <Dropdown.Group>
                      <Dropdown.Items>
                        <Dropdown.Item onClick={'isOpen = !isOpen'}>Africa/Abidjan</Dropdown.Item>
                        <Dropdown.Item onClick={'isOpen = !isOpen'}>Africa/Abidjan</Dropdown.Item>
                        <Dropdown.Item onClick={'isOpen = !isOpen'}>Africa/Abidjan</Dropdown.Item>
                      </Dropdown.Items>
                    </Dropdown.Group>
                  </slot>
                </Dropdown>
              </div>
              <div class="flex justify-end">
                <Button onClick={'isOpen = !isOpen'} size="sm" variant="primary">Save settings</Button>
              </div>
            </div>
          </Card.Group>
        </Card>
      </div>
    </div>
  </div>
</Layout>
