---
import Layout from '@layouts/rinsedocs/Raw.astro';
import GhostButton from '@components/ui/general/buttons/GhostButton.astro';
---

<Layout layoutClass="grid grid-cols-1 mx-auto px-4 max-w-[320px] py-10 gap-4 flex-wrap">
	<div class="grid max-w-[320px] grid-cols-1 gap-2">
		<div class="grid grid-cols-2 gap-2">
			<GhostButton>Default</GhostButton>
			<GhostButton disabled>Disabled</GhostButton>
		</div>
		<div>
			<GhostButton danger fluid>Danger</GhostButton>
		</div>
		<div>
			<GhostButton fluid>Fluid</GhostButton>
		</div>
	</div>
</Layout>
