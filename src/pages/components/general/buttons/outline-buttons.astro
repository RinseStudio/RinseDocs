---
import Layout from '@layouts/rinsedocs/Raw.astro';
import OutlineButton from '@components/ui/general/buttons/OutlineButton.astro';
---

<Layout layoutClass="grid grid-cols-1 mx-auto px-4 max-w-[320px] py-10 gap-4 flex-wrap">
	<div class="grid max-w-[320px] grid-cols-1 gap-2">
		<div class="grid grid-cols-2 gap-2">
			<OutlineButton>Default</OutlineButton>
			<OutlineButton disabled>Disabled</OutlineButton>
		</div>
		<div>
			<OutlineButton danger fluid>Danger</OutlineButton>
		</div>
		<div>
			<OutlineButton fluid>Fluid</OutlineButton>
		</div>
	</div>
</Layout>
