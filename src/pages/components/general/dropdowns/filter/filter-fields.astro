---
import Layout from '@layouts/rinsedocs/Raw.astro';
---

<Layout layoutClass="flex items-center justify-center px-4 py-10">
	<div class="flex min-w-[288px] justify-end">
		<div class="relative" x-data="{open: true}">
			<button
				@click="open = !open"
				class="h-[28px] min-w-[28px]
		rounded-md bg-transparent bg-white px-2 text-[12px] font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
			>
				View settings
			</button>

			<div x-cloak x-show="open" x-transition class="absolute right-0 top-full mt-2 rounded-md bg-white shadow-lg">
				<div class="mb-2 w-[288px] px-3 pt-3 text-xs font-medium text-gray-500">Add column</div>
				<div class="mb-3 px-3">
					<div class="relative rounded-md shadow-sm">
						<div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								width="24"
								height="24"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="2"
								stroke-linecap="round"
								stroke-linejoin="round"
								class="lucide lucide-search h-4 w-4"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.3-4.3"></path></svg
							>
						</div>
						<input
							type="text"
							class="flex h-9 w-full items-center rounded-md border-0 py-1.5 pl-9 text-[13px] text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400"
							placeholder="Search field"
						/>
					</div>
				</div>
				<div class="max-h-[300px] min-h-[200px] overflow-auto px-1 py-1">
					<ul class="space-y-px">
						<li class="px-2 py-2">
							<div class="mb-1 text-[12px] font-medium text-gray-500">Field group</div>
							<div class="h-px bg-gray-200"></div>
						</li>
						<li class="rounded px-2 py-1 hover:bg-gray-100">
							<div class="text-[13px] font-medium text-gray-900">Lists</div>
							<div class="text-[11px] font-medium text-gray-400">lists</div>
						</li>
						<li class="rounded px-2 py-1 hover:bg-gray-100">
							<div class="text-[13px] font-medium text-gray-900">Event Name</div>
							<div class="text-[11px] font-medium text-gray-400">name</div>
						</li>
						<li class="rounded px-2 py-1 hover:bg-gray-100">
							<div class="text-[13px] font-medium text-gray-900">Endpoint</div>
							<div class="text-[11px] font-medium text-gray-400">endpoint</div>
						</li>
						<li class="rounded px-2 py-1 hover:bg-gray-100">
							<div class="text-[13px] font-medium text-gray-900">Timestamp</div>
							<div class="text-[11px] font-medium text-gray-400">timestamp</div>
						</li>
						<li class="rounded px-2 py-1 hover:bg-gray-100">
							<div class="text-[13px] font-medium text-gray-900">Authenticated</div>
							<div class="text-[11px] font-medium text-gray-400">authenticated</div>
						</li>
						<li class="rounded px-2 py-1 hover:bg-gray-100">
							<div class="text-[13px] font-medium text-gray-900">Triggered Signals</div>
							<div class="text-[11px] font-medium text-gray-400">triggered_signals</div>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</Layout>
