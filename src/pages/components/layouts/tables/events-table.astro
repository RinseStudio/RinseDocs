                  <div class="flex h-8 items-center">
                    <i class="fa-solid fa-sparkles text-blue-500" x-on:mouseenter="showTooltip" x-on:mouseleave="hideTooltip"></i>
                  </div>
                  <slot slot="tooltip-content">This is a smart column. Castle automatically enriches content using event data.</slot>
                </Tooltip>
              </Button>
              <slot slot="dropdown-content">
                <Dropdown.Group>
                  <Dropdown.Items>
                    <Dropdown.Item>
                      <div class="mr-1.5 flex items-center justify-center">
                        <i class="fa-solid fa-arrow-up fa-fw"></i>
                      </div>
                       Sort ascending
