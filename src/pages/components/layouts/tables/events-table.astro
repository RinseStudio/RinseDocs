        <div>
          <Button size="sm" variant="outline" square noShadow rounded="left">
            <i class="fa-solid fa-angle-left"></i>
          </Button>
        </div>
        <div>
          <Button size="sm" variant="outline" square noShadow rounded="right">
            <i class="fa-solid fa-angle-right"></i>
          </Button>
        </div>
      </div>
    </div>
  </div>
