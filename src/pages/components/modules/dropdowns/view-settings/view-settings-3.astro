---
import Layout from '@layouts/rinsedocs/Raw.astro';
import Button from '@rinseui/elements/Button/index.astro';
import Dropdown from '@rinseui/modules/Dropdown/index.astro';
import DropdownGroup from '@rinseui/modules/Dropdown/DropdownGroup.astro';
import DropdownItems from '@rinseui/modules/Dropdown/DropdownItems.astro';
import DropdownItem from '@rinseui/modules/Dropdown/DropdownItem.astro';
import DropdownMenuHeader from '@rinseui/modules/Dropdown/DropdownMenuHeader.astro';
import SearchField from '@rinseui/elements/SearchField/index.astro';
import TextField from '@rinseui/elements/TextField/index.astro';
import SelectField from '@rinseui/elements/SelectField/index.astro';
import Link from '@rinseui/elements/Link/index.astro';
---

<Layout layoutClass="flex items-center justify-center px-4 py-10">
  <div class="flex min-w-[320px] justify-end">
    <Dropdown direction="bottomLeft" widthClass="w-[320px]" isOpen>
      <Button onClick={'isOpen = !isOpen'} size="sm" variant="outline">View settings</Button>

      <slot slot="dropdown-content">
        <DropdownGroup>
          <DropdownMenuHeader>
            <Link onClick={'isOpen = !isOpen'} size="xs">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-chevron-left mr-0.5"><path d="m15 18-6-6 6-6"></path></svg
              >
               Event Name
            </Link>
          </DropdownMenuHeader>
        </DropdownGroup>
        <DropdownGroup>
          <div class="grid grid-cols-1 gap-5 px-2 pb-4 pt-2">
            <div>
              <label class="text-medium mb-2 block text-[13px] text-gray-900 dark:text-gray-400">Column Type</label>

              <Dropdown direction="bottomLeft" widthClass="w-full">
                <SelectField placeholder="Most recent event" fluid />
                <slot slot="dropdown-content">
                  <DropdownGroup>
                    <DropdownItems>
                      <DropdownItem onClick={'isOpen = !isOpen'}>is</DropdownItem>
                      <DropdownItem onClick={'isOpen = !isOpen'}>is not</DropdownItem>
                      <DropdownItem onClick={'isOpen = !isOpen'}>is one of</DropdownItem>
                    </DropdownItems>
                  </DropdownGroup>
                </slot>
              </Dropdown>
            </div>
            <div>
              <label class="text-medium mb-2 block text-[13px] text-gray-900 dark:text-gray-400">Column Label</label>
              <TextField placeholder="Most recent event" fluid />
            </div>
          </div>
        </DropdownGroup>
        <DropdownGroup>
          <footer class="flex justify-end gap-2 px-2 py-2">
            <Button onClick={'isOpen = !isOpen'} size="sm" variant="secondary">Cancel</Button>
            <Button onClick={'isOpen = !isOpen'} size="sm" variant="primary">Add column</Button>
          </footer>
        </DropdownGroup>
      </slot>
    </Dropdown>
  </div>
</Layout>
