---
import Layout from '@/layouts/rinsedocs/Raw.astro';
import { Button } from '@/components/Button';
import {
  Dropdown,
  DropdownContent,
  DropdownGroup,
  DropdownHeader,
  DropdownItem,
  DropdownList,
  DropdownSeparator,
  DropdownTrigger,
} from '@/components/Dropdown';
import SearchField from '@/components/SearchField/index.astro';
---

<Layout class="flex items-center justify-center px-4 py-10">
  <div class="flex min-w-[320px] justify-end">
    <Dropdown data={{ isOpen: true }}>
      <DropdownTrigger>
        <Button size="sm" variant="outline">View settings</Button>
      </DropdownTrigger>

      <DropdownContent position="bottom-end" className="w-[320px]">
        <DropdownGroup>
          <DropdownHeader>Add column</DropdownHeader>
          <div class="mb-3 px-2">
            <SearchField
              placeholder="Search by field name"
              validation="default"
              isFluid
            />
          </div>
        </DropdownGroup>
        <DropdownSeparator />
        <DropdownGroup className="max-h-[300px] min-h-[200px] overflow-auto">
          <ul class="space-y-px">
            <li class="mb-2 px-2 pt-4">
              <div
                class="border-b border-zinc-200 pb-1 text-[12px] font-medium text-gray-500 dark:border-zinc-700 dark:text-gray-400"
              >
                Field group
              </div>
            </li>
            <li>
              <button
                class="w-full rounded px-2 py-1 text-left hover:bg-gray-100 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-inset focus-visible:ring-blue-500 dark:hover:bg-zinc-100/[0.06] dark:focus-visible:ring-blue-500"
              >
                <div
                  class="text-[13px] font-medium text-gray-900 dark:text-gray-300"
                >
                  Lists
                </div>
                <div
                  class="text-[11px] font-medium text-gray-400 dark:text-gray-500"
                >
                  lists
                </div>
              </button>
            </li>
            <li>
              <button
                class="w-full rounded px-2 py-1 text-left hover:bg-gray-100 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-inset focus-visible:ring-blue-500 dark:hover:bg-zinc-100/[0.06] dark:focus-visible:ring-blue-500"
              >
                <div
                  class="text-[13px] font-medium text-gray-900 dark:text-gray-300"
                >
                  Event Name
                </div>
                <div
                  class="text-[11px] font-medium text-gray-400 dark:text-gray-500"
                >
                  name
                </div>
              </button>
            </li>
            <li>
              <button
                class="w-full rounded px-2 py-1 text-left hover:bg-gray-100 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-inset focus-visible:ring-blue-500 dark:hover:bg-zinc-100/[0.06] dark:focus-visible:ring-blue-500"
              >
                <div
                  class="text-[13px] font-medium text-gray-900 dark:text-gray-300"
                >
                  Endpoint
                </div>
                <div
                  class="text-[11px] font-medium text-gray-400 dark:text-gray-500"
                >
                  endpoint
                </div>
              </button>
            </li>
            <li>
              <button
                class="w-full rounded px-2 py-1 text-left hover:bg-gray-100 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-inset focus-visible:ring-blue-500 dark:hover:bg-zinc-100/[0.06] dark:focus-visible:ring-blue-500"
              >
                <div
                  class="text-[13px] font-medium text-gray-900 dark:text-gray-300"
                >
                  Timestamp
                </div>
                <div
                  class="text-[11px] font-medium text-gray-400 dark:text-gray-500"
                >
                  timestamp
                </div>
              </button>
            </li>
            <li>
              <button
                class="w-full rounded px-2 py-1 text-left hover:bg-gray-100 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-inset focus-visible:ring-blue-500 dark:hover:bg-zinc-100/[0.06] dark:focus-visible:ring-blue-500"
              >
                <div
                  class="text-[13px] font-medium text-gray-900 dark:text-gray-300"
                >
                  Authenticated
                </div>
                <div
                  class="text-[11px] font-medium text-gray-400 dark:text-gray-500"
                >
                  authenticated
                </div>
              </button>
            </li>
            <li>
              <button
                class="w-full rounded px-2 py-1 text-left hover:bg-gray-100 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-inset focus-visible:ring-blue-500 dark:hover:bg-zinc-100/[0.06] dark:focus-visible:ring-blue-500"
              >
                <div
                  class="text-[13px] font-medium text-gray-900 dark:text-gray-300"
                >
                  Triggered Signals
                </div>
                <div
                  class="text-[11px] font-medium text-gray-400 dark:text-gray-500"
                >
                  triggered_signals
                </div>
              </button>
            </li>
          </ul>
        </DropdownGroup>
      </DropdownContent>
    </Dropdown>
  </div>
</Layout>@/components/Dropdown @/components/Button@/components/Dropdown
