---
import { ViewTransitions } from 'astro:transitions';
const { title } = Astro.props;
import '@styles/rinsedocs.css';
---

<!doctype html>
<html lang="en" class="bg-[#0f131d]">
	<head>
		<title>{title}</title>

		<!-- Meta -->
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="theme-color" content="#000000" />
		<meta name="generator" content={Astro.generator} />

		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<!-- Alpine JS -->
		<!-- <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script> -->
		<ViewTransitions />
	</head>
	<body class="font-sans font-normal text-slate-500 antialiased">
		<slot />
		<script is:inline src="https://unpkg.com/lucide@latest"></script>
		<script is:inline>
			'use strict';

			// Initialize Lucide Icons
			lucide.createIcons();

			document.addEventListener('alpine:init', () => {
				Alpine.data('sidebarLinkState', ($el) => ({
					activeSlug: $el.dataset.currentSlug,
					init() {},
					updateLinks(el) {
						this.activeSlug = el.dataset.slug;
					},
				}));
			});
		</script>
		<script>
			'use strict';
			console.log('test');
		</script>
	</body>
</html>
