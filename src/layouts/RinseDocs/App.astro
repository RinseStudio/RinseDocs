---
import { getCollection } from 'astro:content';
import { SITE } from '@/rinsedocs.config';

import Layout from '@layouts/rinsedocs/Base.astro';
import * as helper from '@/js/rinsedocs.model.js';
import SidebarList from '@/components/rinsedocs/SidebarList.astro';
import TOC from '@/components/rinsedocs/TOC.astro';

const { frontmatter, headings, entry } = Astro.props;

const collection = entry.collection;
const allPages = await getCollection(collection, ({ data }) => {
	return data.draft !== true;
});

const navigation = helper.buildNavigation(allPages, Astro.url.pathname, SITE.sidebar?.components);

const breadcrumb = helper.buildBreadcrumb(entry.slug);
// console.dir(headings, { depth: null });
---

<Layout title={frontmatter.title}>
	<main class="grid grid-cols-[300px,1fr]">
		<aside class="sticky top-0 flex h-[100dvh] flex-none">
			<nav class="flex flex-none flex-col items-center border-r border-white/10 px-2 py-4">
				<div class="flex flex-col gap-3.5">
					<a class="flex h-8 w-8 items-center justify-center rounded-full bg-[#9E7CFF]">
						<svg
							class="h-3.5 w-3.5 text-white"
							xmlns="http://www.w3.org/2000/svg"
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="3"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="lucide lucide-book-text"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"></path><path d="M8 7h6"></path><path d="M8 11h8"></path></svg
						>
					</a>
					<a class="flex h-8 w-8 items-center justify-center rounded-full bg-[#2FB85E]">
						<svg
							class="h-3.5 w-3.5 text-white"
							xmlns="http://www.w3.org/2000/svg"
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="3"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="lucide lucide-droplets"
							><path d="M7 16.3c2.2 0 4-1.83 4-4.05 0-1.16-.57-2.26-1.71-3.19S7.29 6.75 7 5.3c-.29 1.45-1.14 2.84-2.29 3.76S3 11.1 3 12.25c0 2.22 1.8 4.05 4 4.05z"></path><path
								d="M12.56 6.6A10.97 10.97 0 0 0 14 3.02c.5 2.5 2 4.9 4 6.5s3 3.5 3 5.5a6.98 6.98 0 0 1-11.91 4.97"></path></svg
						>
					</a>
					<a class="flex h-8 w-8 items-center justify-center rounded-full bg-[#F86868]">
						<svg
							class="h-3.5 w-3.5 text-white"
							xmlns="http://www.w3.org/2000/svg"
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="3"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="lucide lucide-image"
							><rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect><circle cx="9" cy="9" r="2"></circle><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"></path></svg
						>
					</a>
					<a class="flex h-8 w-8 items-center justify-center rounded-full bg-[#00BCA5]">
						<svg
							class="h-3.5 w-3.5 text-white"
							xmlns="http://www.w3.org/2000/svg"
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="3"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="lucide lucide-smile"
							><circle cx="12" cy="12" r="10"></circle><path d="M8 14s1.5 2 4 2 4-2 4-2"></path><line x1="9" x2="9.01" y1="9" y2="9"></line><line x1="15" x2="15.01" y1="9" y2="9"
							></line></svg
						>
					</a>
					<a class="flex h-8 w-8 items-center justify-center rounded-full bg-[#F19100]">
						<svg
							class="h-3.5 w-3.5 text-white"
							xmlns="http://www.w3.org/2000/svg"
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="3"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="lucide lucide-layout-panel-left"
							><rect width="7" height="18" x="3" y="3" rx="1"></rect><rect width="7" height="7" x="14" y="3" rx="1"></rect><rect width="7" height="7" x="14" y="14" rx="1"
							></rect></svg
						>
					</a>
					<a class="flex h-8 w-8 items-center justify-center rounded-full bg-[#2799EC]">
						<svg
							class="h-3.5 w-3.5 text-white"
							xmlns="http://www.w3.org/2000/svg"
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="3"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="lucide lucide-app-window"
							><rect x="2" y="4" width="20" height="16" rx="2"></rect><path d="M10 4v4"></path><path d="M2 8h20"></path><path d="M6 4v4"></path></svg
						>
					</a>

					<a class="flex h-8 w-8 items-center justify-center rounded-full bg-white/10 hover:bg-white/20">
						<svg
							class="h-3.5 w-3.5 text-white"
							xmlns="http://www.w3.org/2000/svg"
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="3"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="lucide lucide-plus"><path d="M5 12h14"></path><path d="M12 5v14"></path></svg
						>
					</a>
				</div>
			</nav>
			<div class="flex-1 overflow-auto">
				<div class="flex items-center justify-between px-1 py-5">
					<div class="px-2 text-sm font-semibold text-white">Component Library</div>
					<button class="mr-2 flex h-6 w-6 items-center justify-center rounded-lg bg-white shadow outline-none ring-1 ring-gray-950/10 hover:ring-gray-950/20">
						<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-3 w-3">
							<path fill-rule="evenodd" d="M7.455 2.004a.75.75 0 01.26.77 7 7 0 009.958 7.967.75.75 0 011.067.853A8.5 8.5 0 116.647 1.921a.75.75 0 01.808.083z" clip-rule="evenodd"
							></path>
						</svg>
					</button>
				</div>

				<div class="mb-5 px-3">
					<button
						type="button"
						class="flex w-full items-center justify-between rounded-md bg-slate-700/30 px-2.5 py-2 text-left text-sm font-semibold text-white shadow outline-none ring-1 ring-slate-600/50 hover:ring-slate-600"
					>
						<div class="flex items-center gap-2">
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-3.5 w-3.5">
								<path
									fill-rule="evenodd"
									d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z"
									clip-rule="evenodd"></path>
							</svg>

							<span class="text-sm font-normal text-slate-400">Quick search</span>
						</div>
						<span class="text-[11px] font-normal text-slate-400"> âŒ˜K</span>
					</button>
				</div>

				<!-- <h4 class="mb-2 px-3 text-sm font-semibold text-slate-500">Your library</h4> -->

				<nav class="mx-3" data-current-slug={Astro.url.pathname} x-data="sidebarLinkState($el)">
					<SidebarList data={navigation} />
				</nav>
			</div>
		</aside>

		<section class="relative my-3 grid grid-cols-1 rounded-l-lg bg-white shadow-xl ring-1 ring-gray-950/10 lg:grid-cols-[1fr,260px]">
			<div class="grid grid-rows-[auto,1fr]">
				<div class="sticky top-0 flex items-center justify-between rounded-tl-lg border-b border-slate-200 bg-white py-2 pl-4 pr-2">
					<ol role="list" class="group/breadcrumb inline-flex items-center gap-2 text-xs">
						{
							breadcrumb.map((crumb, index) => (
								<li>
									<div class="flex items-center gap-2">
										{index !== 0 ? (
											<svg
												class="h-3 w-3"
												xmlns="http://www.w3.org/2000/svg"
												width="16"
												height="16"
												viewBox="0 0 24 24"
												fill="none"
												stroke="currentColor"
												stroke-width="3"
												stroke-linecap="round"
												stroke-linejoin="round"
												class="lucide lucide-chevron-right"
											>
												<path d="m9 18 6-6-6-6" />
											</svg>
										) : null}

										<span aria-current="page" class:list={index === breadcrumb.length - 1 ? 'font-semibold text-slate-900' : 'font-medium text-slate-500'}>
											{crumb}
										</span>
									</div>
								</li>
							))
						}
						<li>
							<button
								@click="copyURL"
								@mouseleave="hideTooltip"
								x-data="pageLink"
								class="relative flex h-4 w-4 items-center justify-center text-slate-500 opacity-0 duration-300 hover:text-slate-900 group-hover/breadcrumb:opacity-100"
							>
								<svg
									class="h-4 w-4"
									xmlns="http://www.w3.org/2000/svg"
									width="16"
									height="16"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"
									class="lucide lucide-link-2"><path d="M9 17H7A5 5 0 0 1 7 7h2"></path><path d="M15 7h2a5 5 0 1 1 0 10h-2"></path><line x1="8" x2="16" y1="12" y2="12"></line></svg
								>
								<div
									:class="showTooltip == true ? 'opacity-100' : 'opacity-0'"
									class="pointer-events-none absolute left-full top-1/2 ml-2 flex h-6 -translate-y-1/2 items-center rounded-md bg-slate-900/80 px-1.5 text-[11px] font-semibold text-white duration-300"
								>
									Copied!
								</div>
							</button>
						</li>
					</ol>
					<div class="flex items-center gap-1">
						<button class="flex h-8 w-8 items-center justify-center rounded-lg text-slate-400 hover:bg-slate-100 hover:text-slate-600">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								width="16"
								height="16"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="2.5"
								stroke-linecap="round"
								stroke-linejoin="round"
								class="lucide lucide-message-square"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg
							>
						</button>
						<button class="flex h-8 w-8 items-center justify-center rounded-lg text-slate-400 hover:bg-slate-100 hover:text-slate-600">
							<svg
								class=""
								xmlns="http://www.w3.org/2000/svg"
								width="16"
								height="16"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="2"
								stroke-linecap="round"
								stroke-linejoin="round"
								class="lucide lucide-panel-right-close"
								><rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect><line x1="15" x2="15" y1="3" y2="21"></line><path d="m8 9 3 3-3 3"></path></svg
							>
						</button>
					</div>
				</div>
				<div class="overflow-auto px-16">
					<header>
						<div class="pt-6">
							<h1 class="mt-2 text-[28px] font-bold tracking-tight text-slate-900">
								{frontmatter.title}
							</h1>
							{
								frontmatter.description && (
									<div class="mt-1 max-w-2xl">
										<h4 class="text-base font-normal text-slate-700">{frontmatter.description}</h4>
									</div>
								)
							}
						</div>
					</header>
					<article class="rinsedown">
						<slot />
					</article>
				</div>
			</div>
			<div class="relative hidden border-l border-slate-200 lg:block">
				<nav class="sticky top-0 px-5 py-2">
					<button class="absolute right-0 top-0 mr-2 mt-2 flex h-8 w-8 items-center justify-center rounded-lg text-slate-400 hover:bg-slate-100 hover:text-slate-600">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2.5"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="lucide lucide-x"><path d="M18 6 6 18"></path><path d="m6 6 12 12"></path></svg
						>
					</button>
					<div>
						<h3 class="mb-1.5 flex h-8 items-center text-[13px] font-semibold text-slate-900">On this page</h3>
						<TOC data={headings} />
					</div>
					{
						frontmatter.meta && (
							<div class="mt-8">
								<h3 class="mb-1.5 flex h-8 items-center text-[13px] font-semibold text-slate-900">Contribute</h3>
								<ul class="text-sm">
									{frontmatter.meta.map((link) => (
										<li class="text-[13px] font-semibold leading-[28px]">
											<a class="flex items-center gap-2 text-slate-600 hover:text-slate-900" href={link.url}>
												{link.icon === 'pencil' ? (
													// Pencil SVG
													<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-3.5 w-3.5">
														<path d="M2.695 14.763l-1.262 3.154a.5.5 0 00.65.65l3.155-1.262a4 4 0 001.343-.885L17.5 5.5a2.121 2.121 0 00-3-3L3.58 13.42a4 4 0 00-.885 1.343z" />
													</svg>
												) : link.icon === 'github' ? (
													// GitHub SVG
													<svg class="h-3.5 w-3.5" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 496 512">
														<path d="M165.9 397.4c0 2-2.3 3.6-5.2 3.6-3.3.3-5.6-1.3-5.6-3.6 0-2 2.3-3.6 5.2-3.6 3-.3 5.6 1.3 5.6 3.6zm-31.1-4.5c-.7 2 1.3 4.3 4.3 4.9 2.6 1 5.6 0 6.2-2s-1.3-4.3-4.3-5.2c-2.6-.7-5.5.3-6.2 2.3zm44.2-1.7c-2.9.7-4.9 2.6-4.6 4.9.3 2 2.9 3.3 5.9 2.6 2.9-.7 4.9-2.6 4.6-4.6-.3-1.9-3-3.2-5.9-2.9zM244.8 8C106.1 8 0 113.3 0 252c0 110.9 69.8 205.8 169.5 239.2 12.8 2.3 17.3-5.6 17.3-12.1 0-6.2-.3-40.4-.3-61.4 0 0-70 15-84.7-29.8 0 0-11.4-29.1-27.8-36.6 0 0-22.9-15.7 1.6-15.4 0 0 24.9 2 38.6 25.8 21.9 38.6 58.6 27.5 72.9 20.9 2.3-16 8.8-27.1 16-33.7-55.9-6.2-112.3-14.3-112.3-110.5 0-27.5 7.6-41.3 23.6-58.9-2.6-6.5-11.1-33.3 2.6-67.9 20.9-6.5 69 27 69 27 20-5.6 41.5-8.5 62.8-8.5s42.8 2.9 62.8 8.5c0 0 48.1-33.6 69-27 13.7 34.7 5.2 61.4 2.6 67.9 16 17.7 25.8 31.5 25.8 58.9 0 96.5-58.9 104.2-114.8 110.5 9.2 7.9 17 22.9 17 46.4 0 33.7-.3 75.4-.3 83.6 0 6.5 4.6 14.4 17.3 12.1C428.2 457.8 496 362.9 496 252 496 113.3 383.5 8 244.8 8zM97.2 352.9c-1.3 1-1 3.3.7 5.2 1.6 1.6 3.9 2.3 5.2 1 1.3-1 1-3.3-.7-5.2-1.6-1.6-3.9-2.3-5.2-1zm-10.8-8.1c-.7 1.3.3 2.9 2.3 3.9 1.6 1 3.6.7 4.3-.7.7-1.3-.3-2.9-2.3-3.9-2-.6-3.6-.3-4.3.7zm32.4 35.6c-1.6 1.3-1 4.3 1.3 6.2 2.3 2.3 5.2 2.6 6.5 1 1.3-1.3.7-4.3-1.3-6.2-2.2-2.3-5.2-2.6-6.5-1zm-11.4-14.7c-1.6 1-1.6 3.6 0 5.9 1.6 2.3 4.3 3.3 5.6 2.3 1.6-1.3 1.6-3.9 0-6.2-1.4-2.3-4-3.3-5.6-2z" />
													</svg>
												) : (
													// Default SVG
													<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-3.5 w-3.5">
														<path
															fill-rule="evenodd"
															d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
															clip-rule="evenodd"
														/>
													</svg>
												)}
												{link.label}
											</a>
										</li>
									))}
								</ul>
							</div>
						)
					}
				</nav>
			</div>
		</section>
	</main>
</Layout>
 @/js/rinsedocs.model.js
