---
import { getCollection } from 'astro:content';
import { SITE } from '@/rinsedocs.config';

import Layout from '@layouts/rinsedocs/Base.astro';
import * as helper from '@/js/helpers.js';
import SidebarList from '@/components/rinsedocs/SidebarList.astro';
import TOC from '@/components/rinsedocs/TOC.astro';

const { frontmatter, headings, entry } = Astro.props;

const collection = entry.collection;
const allPages = await getCollection(collection, ({ data }) => {
	return data.draft !== true;
});

const navigation = helper.buildNavigation(allPages, Astro.url.pathname, SITE.sidebar?.components);

const breadcrumb = helper.buildBreadcrumb(entry.slug);
// console.dir(headings, { depth: null });
---

<Layout title={frontmatter.title}>
	<main class="flex w-full">
		<aside class="sticky top-0 flex h-[100dvh] flex-none" style="width: 300px">
			<nav class="flex flex-none flex-col items-center border-r border-white/10 px-2 py-4">
				<div class="flex flex-col gap-3.5">
					<a class="flex h-8 w-8 items-center justify-center rounded-full bg-[#9E7CFF]">
						<svg class="h-3.5 fill-current text-white" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512"
							><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
							<path
								d="M96 0C43 0 0 43 0 96V416c0 53 43 96 96 96H384h32c17.7 0 32-14.3 32-32s-14.3-32-32-32V384c17.7 0 32-14.3 32-32V32c0-17.7-14.3-32-32-32H384 96zm0 384H352v64H96c-17.7 0-32-14.3-32-32s14.3-32 32-32zm32-240c0-8.8 7.2-16 16-16H336c8.8 0 16 7.2 16 16s-7.2 16-16 16H144c-8.8 0-16-7.2-16-16zm16 48H336c8.8 0 16 7.2 16 16s-7.2 16-16 16H144c-8.8 0-16-7.2-16-16s7.2-16 16-16z"
							></path></svg
