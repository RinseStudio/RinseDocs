---
const { checked = false } = Astro.props;
---

<div
  class="relative flex items-center gap-3 border-b border-gray-200 px-3 before:absolute before:bottom-0 before:left-[var(--tab-indicator)] before:block before:h-[2px] before:w-[var(--indicator-width)] before:bg-blue-500 before:content-[''] dark:border-zinc-700 dark:before:bg-blue-400"
  style="--tab-indicator: 12px; --indicator-width: 38px;"
>
  <button
    class="py-3 text-[13px] font-medium text-blue-500 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-inset focus-visible:ring-blue-500 dark:text-blue-400 dark:focus-visible:ring-blue-500"
  >
    Fields</button
  >
  <button
    class="py-3 text-[13px] font-medium text-gray-400 hover:text-gray-600 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-inset focus-visible:ring-blue-500 dark:hover:text-gray-300 dark:focus-visible:ring-blue-500"
  >
    Lists</button
  >
  <button
    class="py-3 text-[13px] font-medium text-gray-400 hover:text-gray-600 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-inset focus-visible:ring-blue-500 dark:hover:text-gray-300 dark:focus-visible:ring-blue-500"
  >
    Signals</button
  >
  <button
    class="py-3 text-[13px] font-medium text-gray-400 hover:text-gray-600 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-inset focus-visible:ring-blue-500 dark:hover:text-gray-300 dark:focus-visible:ring-blue-500"
  >
    Policies</button
  >
  <button
    class="py-3 text-[13px] font-medium text-gray-400 hover:text-gray-600 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-inset focus-visible:ring-blue-500 dark:hover:text-gray-300 dark:focus-visible:ring-blue-500"
  >
    Metrics</button
  >
</div>
