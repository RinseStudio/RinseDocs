---
const { className = null, size = 'md', onClick = null, onMouseEnter = null, onMouseLeave = null } = Astro.props;

const getSizeClass = (size) => {
	const schema = {
		xs: `text-[12px]`,
		sm: `text-[13px]`,
		md: `text-[14px]`,
		lg: `text-[15px]`,
		xl: `text-[16px]`,
	};

	return schema[size] ? `${schema[size]}` : `${schema[md]}`;
};
---

<button
	x-on:click={onClick}
	x-on:mouseEnter={onMouseEnter}
	x-on:mouseLeave={onMouseLeave}
	class={`
		inline-flex 
		items-center
		font-medium
	text-gray-500 hover:text-gray-700
		dark:text-gray-300 dark:hover:text-gray-100
		focus:outline-none
		focus:ring-2 
		focus:ring-inset 
		focus:ring-blue-500 
		dark:focus:ring-blue-500
		${getSizeClass(size)} 
		${className} 
		`}
	type="button"
>
	<slot />
</button>
