---
import { twMerge } from 'tailwind-merge';
const { className, ...props } = Astro.props;
---

<input
  type="checkbox"
  class={twMerge(
    'h-4 dark:checked:bg-blue-600 w-4 rounded border-zinc-300 bg-zinc-50 dark:border-zinc-600 dark:bg-zinc-800 dark:ring-offset-zinc-800 dark:checked:border-blue-600 disabled:bg-zinc-200 disabled:checked:bg-zinc-400 dark:disabled:bg-zinc-900 disabled:cursor-not-allowed dark:disabled:checked:bg-zinc-900 dark:disabled:checked:border-zinc-600',
    className,
  )}
  {...props}
/>
