---
import { twMerge } from 'tailwind-merge';
const { className = null, ...props } = Astro.props;
---

<button
  role="menuitem"
  @click="{isOpen = !isOpen}"
  class={twMerge(
    'flex h-[32px] w-full cursor-default items-center rounded-md px-2 text-[13px] font-medium text-gray-800 hover:bg-zinc-100 hover:text-gray-900 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-inset focus-visible:ring-blue-500 dark:text-gray-300 dark:hover:bg-zinc-100/[0.06] dark:hover:text-gray-200 dark:focus-visible:ring-blue-500',
    className,
  )}
  {...props}
>
  <slot />
</button>
