  Select,
  SelectNative,
  SelectGroup,
  SelectTrigger,
  SelectField,
  SelectContent,
  SelectHeader,
  SelectLabel,
  SelectItems,
  SelectItem,
  SelectOption,
  SelectSeparator,
} from '@/components/ui/elements/Select';
---

<div class="justify-content flex flex-col items-center gap-4">
  <Select className="w-[200px]" data-id="component1">
    <SelectTrigger>
      <SelectField isFluid placeholder="Select option" />
    </SelectTrigger>
    <SelectContent position="bottomStart" className="w-[200px]">
      <SelectGroup>
        <SelectLabel>Fruits</SelectLabel>
        <SelectItems>
          <SelectItem value="Apple">Apple</SelectItem>
          <SelectItem value="Cherry" @click="isOpen = false">Cherry</SelectItem>
          <SelectItem value="Tomato">Tomato</SelectItem>
        </SelectItems>
      </SelectGroup>
    </SelectContent>
  </Select>

  <Select className="w-[200px]">
