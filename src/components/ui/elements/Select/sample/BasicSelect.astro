          <SelectItem value="Cherry" @click="isOpen = false">Cherry</SelectItem>
          <SelectItem value="Tomato">Tomato</SelectItem>
        </SelectItems>
      </SelectGroup>
    </SelectContent>
  </Select>

  <button
    @click="$dispatch('update-validation', { targetId: 'component1', newValidation: 'success' })"
  >
    Update Validation for Component 1
