---
import { twMerge } from 'tailwind-merge';
const {
  className = null,
  placeholder = 'Select option',
  validation = null,
  isFluid = null,
  ...props
} = Astro.props;
---

<select
  class={twMerge(
    'relative flex h-9 ring-inset items-center rounded-md border-0 pl-3 text-[13px] shadow-sm disabled:cursor-not-allowed disabled:bg-gray-50 disabled:text-gray-500 dark:disabled:text-gray-400 disabled:ring-gray-200 dark:disabled:bg-zinc-100/[0.06] bg-white dark:bg-zinc-100/[0.06] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-inset focus-visible:ring-blue-500 dark:focus-visible:ring-blue-500 ring-1 ring-zinc-950/10 hover:ring-zinc-950/20 dark:ring-zinc-50/10 dark:hover:ring-zinc-50/20 text-gray-900 dark:text-gray-200 placeholder:text-gray-400',
    validation == 'success' &&
      'ring-2 ring-green-500 dark:ring-green-500 text-green-800 dark:text-green-200 placeholder:text-green-500',
    validation == 'error' &&
      'ring-2 ring-red-400 dark:ring-red-400 text-red-900 dark:text-red-200 placeholder:text-red-300',
    isFluid && 'w-full',
    className,
  )}
  {...props}
>
  <slot />
</select>
