---
import { twMerge } from 'tailwind-merge';
const { className, ...props } = Astro.props;
---

<input
  type="checkbox"
  class={twMerge(
    'h-4 dark:checked:bg-blue-600 w-4 rounded border-slate-300 bg-slate-50 dark:border-slate-600 dark:bg-slate-800 dark:ring-offset-slate-800 dark:checked:border-blue-600 disabled:bg-slate-200 disabled:checked:bg-slate-400 dark:disabled:bg-slate-900 disabled:cursor-not-allowed dark:disabled:checked:bg-slate-900 dark:disabled:checked:border-slate-600',
    className,
  )}
  {...props}
/>
