---
// TableOfContentsHeading.astro
const { heading } = Astro.props;
---

<li class="text-sm font-medium leading-[28px]" class:list={heading.depth !== 2 ? 'ml-2 font-normal' : ''}>
	{
		heading.depth !== 2 ? (
			<a class="flex items-center gap-0.5 text-slate-600 hover:text-slate-900" href={'#' + heading.slug}>
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-4 w-4">
					<path
						fill-rule="evenodd"
						d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
						clip-rule="evenodd"
					/>
				</svg>
				{heading.text}
			</a>
		) : (
			<a class="flex items-center gap-0.5 text-slate-600 hover:text-slate-900" href={'#' + heading.slug}>
				{heading.text}
			</a>
		)
	}

	{
		heading.subheadings.length > 0 && (
			<ul>
				{heading.subheadings.map((subheading) => (
					<Astro.self heading={subheading} />
				))}
			</ul>
		)
	}
</li>
