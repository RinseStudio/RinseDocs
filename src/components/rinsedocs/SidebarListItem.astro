---
const { page } = Astro.props;
---

{
	page.isIndex ? (
		<li class="last:mb-4" x-data="{open: false}">
			{
				<div
					x-on:click="open = !open"
					class="sidebarItem flex items-center justify-between rounded-md pr-1 text-gray-600  hover:bg-zinc-200/70 hover:text-gray-900 dark:text-gray-500 hover:dark:text-gray-400"
				>
					<a href={'/' + page.url} class="flex flex-1 items-center justify-between pl-2.5 text-[13px] leading-[28px]">
						{page.title}
						<svg x-bind:class="open ? 'rotate-90' : ''" class="xduration-200 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-5 w-5">
							<path
								fill-rule="evenodd"
								d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
								clip-rule="evenodd"
							/>
						</svg>
					</a>
				</div>
			}

			{page.pages.length > 0 && (
				<div x-cloak class="xtransition-[grid-template-rows_0.2s] ml-4 grid overflow-hidden" x-bind:class="open ? 'grid-rows-[1fr]' : 'grid-rows-[0fr]'">
					<ul class="min-h-0 space-y-px">
						{page.pages.map((subpage) => (
							<Astro.self page={subpage} />
						))}
					</ul>
				</div>
			)}
		</li>
	) : (
		<li class="mt-px ">
			<div class="sidebarItem rounded-md pr-1 text-gray-600 hover:bg-zinc-200/70 hover:text-gray-900 dark:text-gray-500 hover:dark:text-gray-400">
				<a href={'/' + page.url} class="flex px-2.5 text-[13px] leading-[28px] " x-data={page.isIndex ? '{open: false}' : ''}>
					{page.title}
				</a>
			</div>
		</li>
	)
}
