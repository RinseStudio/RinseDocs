{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@js/*": ["src/js/*"],
			"@pages/*": ["src/pages/*"],
			"@components/*": ["src/components/*"],
			"@assets/*": ["src/assets/*"],
			"@layouts/*": ["src/layouts/*"],
			"@styles/*": ["src/styles/*"],
			"@data/*": ["src/data/*"]
		},
		"strictNullChecks": true,
		"allowJs": true
	}
}
